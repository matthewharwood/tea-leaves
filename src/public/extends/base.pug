    base(href='/')
  body(ng-app="app" ng-controller="appCtrl as ac" ng-class="{'no-scroll': bodyScroll}")
    include ./gtm-body.rawhtml
    -var menu = { 'Home': '/', 'About': '/about', 'Tasting': '/tasting' };

    block link
      -var selected = 'Home'; //default

    nav.main-nav.sticky-nav
      ul.main-nav__list
        each val, key in menu
          li.main-nav__item
            if selected === key
              a(class="main-nav__item__link selected" href=val, title=key)= key
            else
              a(class="main-nav__item__link" href=val, title=key)= key
        li.main-nav__item
          a(href="#" class="main-nav__item__link") Shop Now
      mobile-navigation
    block body
    block script
      script(src='./bundle.js')
    include ../includes/footer/footer.pug
    script
      | $('.landing-cta__copy').click(function() {
      |   $('html, body').animate({
      |     scrollTop: window.document.body.clientHeight,
      |   }, 800);
      |   setTimeout(function() {
      |     $('html, body').animate({
      |       scrollTop: window.document.body.clientHeight + 1,
      |     }, 0);
      |   }, 1400);
      | });
