          p.parallels--mobile__copy
            | #{keyIngredientTea.copy}
      div.parallels--mobile__content--mobile
        a(href=keyIngredientTea.buttonLink target="_blank")
          button.button--primary--light #{keyIngredientTea.button}
        div.parallels__product
          p #{keyIngredientTea.buttonCopy}

