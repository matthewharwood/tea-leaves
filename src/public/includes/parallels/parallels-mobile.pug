include content
section.parallels--mobile(ng-init="parallelsModalOpen = false")
  h3.parallels--mobile__headline Parallels in <br> Wine &amp; Tea

  ul
    //
    // Terroir wine
    //
    li.parallels--mobile__section
      div.parallels-bg.wipe
        div.wipe__section.wipe__section--left
          div.wipe__section-container
            img(src="assets/images/parallels/beige/america-map-beige.png")
        div.wipe__section.wipe__section--right
          div.wipe__section-container
            img(src="assets/images/parallels/beige/china-map-beige.png")
        div.wipe-slider
          img.wipe-slider__handle(src="assets/images/parallels/slider-handle.svg" alt="slider-arrow")
      div.parallels--mobile__title
        h4 #{terroirWine.headline}
        h3 #{terroirWine.subline} / <br> #{terroirTea.subline}
      div.parallels--mobile__button-container
        button(ng-click="parallelsModalOpen = true" class="button--primary--light") Learn more

    li.parallels--mobile__section
      div.parallels-bg.wipe
        div.wipe__section.wipe__section--left
          div.wipe__section-container
            img(src="assets/images/parallels/beige/wine-grapes-beige.png")
        div.wipe__section.wipe__section--right
          div.wipe__section-container
            img(src="assets/images/parallels/beige/tea-leaf-plant-beige.png")
        div.wipe-slider
          img.wipe-slider__handle(src="assets/images/parallels/slider-handle.svg" alt="slider-arrow")
      div.parallels--mobile__title
        h4 #{keyIngredientWine.headline}
        h3 #{keyIngredientWine.subline} / <br> #{keyIngredientTea.subline}
      div.parallels--mobile__button-container
        button(ng-click="parallelsModalOpen2 = true" class="button--primary--light") Learn more

    li.parallels--mobile__section
      div.parallels-bg.wipe
        div.wipe__section.wipe__section--left
          div.wipe__section-container
            img(src="assets/images/parallels/beige/wine-barrel-beige.png")
        div.wipe__section.wipe__section--right
          div.wipe__section-container
            img(src="assets/images/parallels/beige/tea-leaves-racks-beige.png")
        div.wipe-slider
          img.wipe-slider__handle(src="assets/images/parallels/slider-handle.svg" alt="slider-arrow")
      div.parallels--mobile__title
        h4 #{techniqueWine.headline}
        h3 #{techniqueWine.subline} / <br> #{techniqueTea.subline}
      div.parallels--mobile__button-container
        button(ng-click="parallelsModalOpen3 = true" class="button--primary--light") Learn more

  modal.parallels--mobile__modal(opened='parallelsModalOpen')
    div.parallels--mobile-container
      div.parallels--mobile__content--mobile
        div.parallels--mobile__title
          h4 #{terroirWine.headline}
          h3 #{terroirWine.subline}
          div.parallels__bg.parallels__bg--map--beige
        div
          p.parallels--mobile__copy
            | #{terroirWine.copy}
      div.parallels--mobile__content--mobile
        div.parallels--mobile__title
          h4 #{terroirTea.headline}
          h3 #{terroirTea.subline}
          div.parallels__bg.parallels__bg--china--beige
        div.parallels--mobile__content
          p.parallels--mobile__copy
            | #{terroirTea.copy}
      div.parallels--mobile__content--mobile
        a(href=terroirTea.buttonLink target="_blank")
          button.button--primary--light #{terroirTea.button}
        div.parallels__product
          p #{terroirTea.buttonCopy}

  modal.parallels--mobile__modal(opened='parallelsModalOpen2')
    div.parallels--mobile-container
      div.parallels--mobile__content--mobile
        div.parallels--mobile__title
          h4 #{keyIngredientWine.headline}
          h3 #{keyIngredientWine.subline}
          div.parallels__bg.parallels__bg--grapes--beige
        div
          p.parallels--mobile__copy
            | #{keyIngredientWine.copy}
      div.parallels--mobile__content--mobile
        div.parallels--mobile__title
          h4 #{keyIngredientTea.headline}
          h3 #{keyIngredientTea.subline}
          div.parallels__bg.parallels__bg--tea-leaf--beige
