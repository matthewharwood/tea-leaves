include content
section.parallels
  div.wipe
    div.wipe__section.wipe__section--left.parallels__tea-leaves
      ul.wipe__section-container
        li.parallels__section
          div.parallels__title
            h4 #{terroirTea.headline}
            h3 #{terroirTea.subline}
          div.parallels__barrel
          div.parallels__content
            p.parallels__copy
              | #{terroirTea.copy}
            div.parallels__cta
              button.button--primary--dark #{terroirTea.button}
              div.parallels__product
                p #{terroirTea.buttonCopy}
        li.parallels__section
          div.parallels__title
            h4 #{keyIngredientTea.headline}
            h3 #{keyIngredientTea.subline}
